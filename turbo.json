{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "test:e2e": {
      "cache": false
    },
    "lint": {
      "cache": true
    },
    "format": {
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
