{
  "id": "code-sandbox",
  "name": "Code Execution Sandbox",
  "version": "1.0.0",
  "description": "Safely execute code snippets with output preview",
  "author": "PKN Team",
  "autoEnable": false,
  "dependencies": [],
  "settings": {
    "defaultLanguage": {
      "type": "select",
      "label": "Default language",
      "default": "javascript",
      "options": [
        {"value": "javascript", "label": "JavaScript"},
        {"value": "python", "label": "Python"},
        {"value": "html", "label": "HTML/CSS"}
      ],
      "description": "Default programming language"
    },
    "timeout": {
      "type": "number",
      "label": "Execution timeout (ms)",
      "default": 5000,
      "description": "Maximum execution time in milliseconds"
    },
    "autoDetect": {
      "type": "boolean",
      "label": "Auto-detect code blocks",
      "default": true,
      "description": "Show Run button on code blocks in chat"
    }
  }
}
