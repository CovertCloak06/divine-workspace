{
  "name": "divine-node-code-academy",
  "version": "1.0.0",
  "description": "Interactive coding education platform for complete beginners",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:a11y": "playwright test tests/a11y",
    "lint": "biome lint src/ js/",
    "lint:fix": "biome check --write src/ js/ css/",
    "format": "biome format --write src/ js/ css/",
    "format:check": "biome format src/ js/ css/",
    "type-check": "tsc --noEmit",
    "analyze": "vite build --mode analyze",
    "lighthouse": "lhci autorun",
    "license-check": "license-checker --summary",
    "security-audit": "npm audit --production",
    "commit": "cz",
    "release": "semantic-release",
    "generate": "plop",
    "generate:component": "plop component",
    "generate:lesson": "plop lesson",
    "deploy:vercel": "vercel deploy --prod",
    "deploy:netlify": "netlify deploy --prod"
  },
  "keywords": [
    "education",
    "coding",
    "interactive",
    "learn-to-code",
    "tutorial"
  ],
  "author": "Divine Node",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.40.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@vitest/ui": "^1.0.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "happy-dom": "^20.1.0",
    "hygen": "^6.2.11",
    "jsdom": "^27.4.0",
    "license-checker": "^25.0.1",
    "plop": "^4.0.4",
    "rollup-plugin-visualizer": "^6.0.5",
    "semantic-release": "^24.2.9",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^1.0.0",
    "web-vitals": "^5.1.0"
  },
  "dependencies": {
    "ajv": "^8.12.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
